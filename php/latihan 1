<?php
// baca input dari STDIN
echo "masukan nilai tugas:";
$tugas = (float) trim(fgets(STDIN));

echo "masukan nilai uts:";
$uts = (float) trim(fgets(STDIN));

echo "masukan nilai UAS:";
$uas = (float) trim(fgets(STDIN));

// hitung nilai akhir (rata-rata sederhana)
$nilaiakhir = ($tugas + $uts + $uas) / 3;

// tampilkan hasil
echo "nilai akhir=" . $nilaiakhir . PHP_EOL;

// tentukan status (ubah ambang sesuai kebutuhan)
if ($nilaiakhir >= 60) {
    $status = "LULUS";
} else {
    $status = "TIDAK LULUS";
}
echo "status: " . $status . PHP_EOL;
